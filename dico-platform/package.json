{
  "name": "dico-platform",
  "version": "1.0.0",
  "description": "Dico Platform - Decentralized ICO Platform with Next.js frontend and Hardhat smart contracts",
  "private": true,
  "scripts": {
    "dev": "npm run dev:frontend",
    "dev:frontend": "cd frontend && npm run dev",
    "dev:contracts": "cd contracts && npm run node",
    "dev:all": "concurrently \"npm run dev:contracts\" \"npm run dev:frontend\"",
    "build": "npm run build:frontend && npm run build:contracts",
    "build:frontend": "cd frontend && npm run build",
    "build:contracts": "cd contracts && npm run build",
    "start": "npm run start:frontend",
    "start:frontend": "cd frontend && npm run start",
    "test": "npm run test:frontend && npm run test:contracts",
    "test:frontend": "echo 'Frontend tests not configured yet'",
    "test:contracts": "cd contracts && npm run test",
    "test:coverage": "cd contracts && npm run test:coverage",
    "lint": "npm run lint:frontend",
    "lint:frontend": "cd frontend && npm run lint",
    "deploy:localhost": "cd contracts && npm run deploy:localhost",
    "deploy:sepolia": "cd contracts && npm run deploy:sepolia",
    "deploy:mainnet": "cd contracts && npm run deploy:mainnet",
    "clean": "cd contracts && npm run clean",
    "install:all": "npm install && cd frontend && npm install && cd ../contracts && npm install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "workspaces": [
    "frontend",
    "contracts"
  ],
  "keywords": [
    "dico",
    "ico",
    "defi",
    "nextjs",
    "hardhat",
    "ethereum",
    "smart-contracts",
    "web3"
  ],
  "author": "Dico Platform Team",
  "license": "MIT"
}